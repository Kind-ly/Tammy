model CareGiver {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  patients  Patient[]
  schedules Schedule[]
}

model Patient {
  id          Int         @id @default(autoincrement())
  name        String
  patientInfo String?
  timezome    String
  deviceId    String
  careGivers  CareGiver[]
  schedules   Schedule[]
}

model Schedule {
  id         Int         @id @default(autoincrement())
  date       String
  patient    Patient     @relation(fields: [patientId], references: [id])
  patientId  Int
  activities Activity[]
  careGivers CareGiver[]
}

model Activity {
  id             Int        @id @default(autoincrement())
  date           String
  time           String
  repeatsOn      String?
  repeatsUntil   String?
  description    String
  instructions   String?
  patientId      Int
  schedules      Schedule[]
  reminderBefore String
  reminderAfter  String?
}
