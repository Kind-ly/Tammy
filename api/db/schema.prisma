model Task {
  id              Int         @id @default(autoincrement())
  date            String
  time            String
  // repeatsOn       String?
  // repeatsUntil    String?
  description     String
  instructions    String?
  patient         Patient     @relation(fields: [patientId], references: [id])
  patientId       Int
  // schedules       DailySchedule[]
  // reminderBefore  String
  // reminderAfter   String?
  actions         Action[]
}

model Action {
  id              Int         @id @default(autoincrement())
  patient         Patient     @relation(fields: [patientId], references: [id])
  patientId       Int
  task            Task        @relation(fields: [taskId], references: [id])
  taskId          Int
  details         String
  date            String
  time            String
}