datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model CareGiver {
  id              Int        @id @default(autoincrement())
  email           String     @unique
  name            String
  patients        Patient[]
  // schedules       DailySchedule[]
}

model Patient {
  id              Int         @id @default(autoincrement())
  name            String
  patientInfo     String?
  timezone        String
  deviceId        String
  careGivers      CareGiver[]
  // schedules       DailySchedule[]
  tasks           Task[]
  actions         Action[]
}

